<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".PassScreenActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="กรุณาป้อนรหัสผ่าน"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/pass_code_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.515" />

    <TextView
        android:id="@+id/pass_code_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/bg_input"
        android:gravity="center"
        android:inputType="numberPassword"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/digit_1_button"
        app:layout_constraintEnd_toEndOf="@+id/digit_3_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/digit_1_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="1234" />

    <Button
        android:id="@+id/digit_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/digit_4_button"
        app:layout_constraintEnd_toStartOf="@+id/digit_2_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_code_text_view" />

    <Button
        android:id="@+id/digit_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="2"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/digit_3_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/digit_1_button"
        app:layout_constraintTop_toTopOf="@+id/digit_1_button" />

    <Button
        android:id="@+id/digit_3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="16dp"
        android:text="3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/digit_2_button"
        app:layout_constraintTop_toTopOf="@+id/digit_2_button" />

    <Button
        android:id="@+id/digit_4_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="4"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/digit_7_button"
        app:layout_constraintStart_toStartOf="@+id/digit_1_button"
        app:layout_constraintTop_toBottomOf="@+id/digit_1_button" />

    <Button
        android:id="@+id/digit_5_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/digit_2_button"
        app:layout_constraintTop_toTopOf="@+id/digit_4_button" />

    <Button
        android:id="@+id/digit_6_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/digit_3_button"
        app:layout_constraintTop_toTopOf="@+id/digit_5_button" />

    <Button
        android:id="@+id/digit_7_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="7"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cancel_button"
        app:layout_constraintStart_toStartOf="@+id/digit_4_button"
        app:layout_constraintTop_toBottomOf="@+id/digit_4_button" />

    <Button
        android:id="@+id/digit_8_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/digit_5_button"
        app:layout_constraintTop_toTopOf="@+id/digit_7_button" />

    <Button
        android:id="@+id/digit_9_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/digit_6_button"
        app:layout_constraintTop_toTopOf="@+id/digit_8_button" />

    <Button
        android:id="@+id/digit_0_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/digit_8_button"
        app:layout_constraintTop_toTopOf="@+id/cancel_button" />

    <Button
        android:id="@+id/back_space_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ลบ"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/digit_9_button"
        app:layout_constraintTop_toTopOf="@+id/digit_0_button" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="กลับ"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/digit_7_button"
        app:layout_constraintTop_toBottomOf="@+id/digit_7_button" />



</android.support.constraint.ConstraintLayout>